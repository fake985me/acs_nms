APP_NAME="ACS Core"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# Point to the shared database in the root directory relative to acs-laravel/
# Or use an absolute path if preferred.
# For Windows/Laragon: c:/laragon/www/acs-core/acs.db
# For relative path from laravel root: ../../acs.db
DB_DATABASE=../../acs.db
DB_FOREIGN_KEYS=true

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ACS Core API Configuration
ACS_API_URL=http://localhost:7547/api

# SNMP Configuration (Optional)
# SNMP_COMMUNITY=public
# SNMP_VERSION=2c
# SNMP_TIMEOUT=2000
